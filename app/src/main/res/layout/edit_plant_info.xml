<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background">
    <View
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/theme_background"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <com.example.shadow.howalive.LoadHeadIconButton
        android:id="@+id/plantinfo_headiconbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <com.example.shadow.howalive.Text2ImageButton
        android:id="@+id/plantinfo_plantnamebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <com.example.shadow.howalive.Text2ImageButton
        android:id="@+id/plantinfo_plantkindbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <com.example.shadow.howalive.Text2ImageButton
        android:id="@+id/plantinfo_arrivetimebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />

</LinearLayout>