<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/plant_list_height">

    <RelativeLayout
        android:id="@+id/plant1_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="18dp"
        android:paddingRight="14dp">
        <com.example.shadow.howalive.CircleImageView
            android:id="@+id/plant1_headimg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/plant_head1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/plant1_name_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/plant1_box"
        android:orientation="vertical">
        <TextView
            android:id="@+id/plant1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:paddingTop="13dp"
            />
        <TextView
            android:id="@+id/plant1_kind"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/plant_list_kind_box"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/plantlistkind_corners_bg"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/plant1_day"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="@color/list_context_text"
        android:layout_toRightOf="@+id/plant1_name_box"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="bottom"
        android:textSize="17sp"/>
    <ImageView
        android:id="@+id/list2_image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detial_arrow"
        android:layout_centerVertical="true"
        android:padding="@dimen/list_arrowpadding"
        android:layout_alignParentRight="true"/>
</RelativeLayout>