<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background">

    <View
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/theme_background"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <com.example.shadow.howalive.Text2ImageButton
        android:id="@+id/setting_personalinfo_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <com.example.shadow.howalive.Text2ImageButton
        android:id="@+id/setting_modifypassword_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/theme_background"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <com.example.shadow.howalive.Text2ImageButton
        android:id="@+id/setting_aboutEPPS_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/list_line"
        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@color/theme_background"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="@dimen/list_height"
        android:background="#ffffff"
        android:textSize="@dimen/list_context_textsize"
        android:text="退出登录"/>

</LinearLayout>