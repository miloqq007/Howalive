<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <RelativeLayout
        android:id="@+id/home_plant_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="18dp"
        android:paddingRight="14dp">
        <com.example.shadow.howalive.CircleImageView
            android:id="@+id/home_plant_headimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/plant_head1" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_plant_name_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/home_plant_box"
        android:orientation="vertical">
        <TextView
            android:id="@+id/home_plant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:paddingTop="9dp"
            />
        <TextView
            android:id="@+id/home_plant_day"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="6dp"
            android:textColor="@color/list_context_text"
            android:textSize="16sp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/home_plant_image_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/detial_arrow"
        android:layout_centerVertical="true"
        android:padding="@dimen/list_arrowpadding"
        android:layout_alignParentRight="true"/>
</RelativeLayout>