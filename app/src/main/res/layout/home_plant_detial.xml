<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/theme_background">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="0dp"
                android:paddingBottom="0dp"
                android:background="@drawable/personal_h_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/homeplantdetial_left_btn"
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/arrow"
                        android:layout_marginTop="28dp"
                        android:layout_marginLeft="20dp"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:id="@+id/homeplant_bringday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray"
                        android:textSize="18sp"
                        android:layout_marginLeft="110dp"
                        android:layout_gravity="bottom"
                        android:text="已养32天"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="30dp">
                    <com.example.shadow.howalive.CircleImageView
                        android:id="@+id/homeplantpersonal_image"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/plant_head1"
                        app:civ_border_color="@color/personal_head_bg"
                        app:civ_border_width="3dp" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/homeplant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="19sp"
                    android:paddingTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:text="小米粥"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@color/theme_background"
                />
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/list_line"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="品种："/>
                <TextView
                    android:id="@+id/homeplantdetial_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="水仙"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/list_line"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:textSize="21sp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:text="到家时间："/>
                <TextView
                    android:id="@+id/homeplantdetial_arrivalday"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="2016-1-27"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/list_line"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:background="@drawable/home_plant_detial_corner_bg">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/home_plant_detial_text_margin"
                        android:text="当前："/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/home_plant_detial_text_margin"
                        android:text="温度：16℃"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/home_plant_detial_text_margin"
                        android:text="湿度：60%"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/home_plant_detial_text_margin"
                        android:text="光照：充足"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/warning_center_line_bg">
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:padding="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/home_plant_detial_text_margin"
                        android:text="标准："/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/home_plant_detial_text_margin"
                        android:text="温度：16℃"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/home_plant_detial_text_margin"
                        android:text="湿度：80%"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:layout_margin="@dimen/home_plant_detial_text_margin"
                        android:text="光照：充足"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>