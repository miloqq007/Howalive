<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="0dp"
        android:background="@drawable/personal_h_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/plantdetial_left_btn"
                android:layout_width="15dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/arrow"
                android:layout_marginTop="28dp"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_gray"
                android:textSize="18sp"
                android:layout_marginLeft="110dp"
                android:layout_gravity="bottom"
                android:text="已养32天"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">
            <com.example.shadow.howalive.CircleImageView
                android:id="@+id/personal_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/plant_head1"
                app:civ_border_color="@color/personal_head_bg"
                app:civ_border_width="3dp" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:textSize="19sp"
            android:paddingTop="22dp"
            android:layout_gravity="center_horizontal"
            android:text="小米粥"/>
        <Button
            android:id="@+id/plant_detial_editinfo_btn"
            android:layout_width="95dp"
            android:layout_height="33dp"
            android:textSize="16dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="#81909092"
            android:text="编辑资料"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="49dp"
        android:background="@drawable/record_layer">
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <!--日期时间一条-->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <com.example.shadow.howalive.DateTimeWidget
                    android:id="@+id/time1"
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:paddingTop="23dp"/>
                <com.example.shadow.howalive.DateTimeWidget
                    android:id="@+id/time2"
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:paddingTop="23dp"/>
                <com.example.shadow.howalive.DateTimeWidget
                    android:id="@+id/time3"
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:paddingTop="23dp"/>
                <com.example.shadow.howalive.DateTimeWidget
                    android:id="@+id/time4"
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:paddingTop="23dp"/>
                <com.example.shadow.howalive.DateTimeWidget
                    android:id="@+id/time5"
                    android:layout_width="fill_parent"
                    android:layout_height="65dp"
                    android:paddingTop="23dp"/>
            </LinearLayout>

            <!--点点一条-->
            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@drawable/time_line_bg">
                <LinearLayout
                    android:id="@+id/point_box1"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <ImageView
                        android:id="@+id/point1"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/node_icon"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/point_box2"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <ImageView
                        android:id="@+id/point2"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/node_icon"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/point_box3"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <ImageView
                        android:id="@+id/point3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/node_icon"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/point_box4"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <ImageView
                        android:id="@+id/point4"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/node_icon"
                        android:background="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/point_box5"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <ImageView
                        android:id="@+id/point5"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginTop="23dp"
                        android:src="@drawable/node_icon"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>

            <!--记录内容一条-->
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:id="@+id/record_box1"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <com.example.shadow.howalive.RecordListWidget
                        android:id="@+id/record1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/record_box2"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <com.example.shadow.howalive.RecordListWidget
                        android:id="@+id/record2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/record_box3"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <com.example.shadow.howalive.RecordListWidget
                        android:id="@+id/record3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/record_box4"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <com.example.shadow.howalive.RecordListWidget
                        android:id="@+id/record4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/record_box5"
                    android:layout_width="wrap_content"
                    android:layout_height="65dp">
                    <com.example.shadow.howalive.RecordListWidget
                        android:id="@+id/record5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>