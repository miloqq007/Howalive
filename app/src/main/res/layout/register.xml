<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_regist">
    <LinearLayout
        android:id="@+id/reg_div"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corners_bg"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_user"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:src="@drawable/user_name_icon"/>
            <EditText
                android:id="@+id/tx_user"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="14dp"
                android:hint="输入用户名"
                android:textColorHint="@color/c_button"
                android:textSize="14sp"
                android:typeface="monospace"
                android:textColor="#000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border">
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="/ABC /abc /123"
            android:textSize="10sp"
            android:gravity="right"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border">
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_pas"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:src="@drawable/password_icon"/>
            <EditText
                android:id="@+id/tx_pas"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="14dp"
                android:textColorHint="@color/c_button"
                android:password="true"
                android:textSize="14sp"
                android:typeface="monospace"
                android:hint="设置登录密码"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border">
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="/ABC /abc /123"
            android:textSize="10sp"
            android:gravity="right"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/border">
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/img_pas2"
                android:layout_width="20dp"
                android:layout_height="50dp"
                android:src="@drawable/second_password_icon"/>
            <EditText
                android:id="@+id/tx_pas2"
                android:background="@null"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="14dp"
                android:textColorHint="@color/c_button"
                android:textSize="14sp"
                android:password="true"
                android:hint="再次输入密码"
                android:typeface="monospace"
                android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/next_btr"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:background="@drawable/cir_btr"
        android:text="下一步"
        android:enabled="false"
        android:textColor="@android:color/white"/>

</LinearLayout>